# Add your Python code here. E.g.
from microbit import *

#test case #1 = 00 + 00 = 000 (0 + 0 = 0)
A1 = pin2.write_digital(0);
A0 = pin0.write_digital(0);
B1 = pin8.write_digital(0);
B0 = pin1.write_digital(0);

#verify pins
C = pin12.read_digital();
S1 = pin16.read_digital();
S0 = pin9.read_digital();

if C == 0 and S1 == 0 and S0 == 0:
    print("CORRECT! 0 + 0 = 0");
else :
    print("INCORRECT! 0 + 0 != 0"); 

sleep(2000);
print("Next Test Case...");
sleep(2000);

